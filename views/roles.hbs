<h2>Roles</h2>

{{!-- DISPLAY all roles in the Roles table --}}
<div class="table-container">
<table id="role-table" class="display-table">

    <thead>
        <tr>
            <th>Role ID</th>
            <th>Name</th>
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr data-value={{this.roleID}}>
            <td style="text-align: right;">{{this.roleID}}</td>
            <td>{{this.name}}</td>
            <td><button onclick="deleteRole({{this.roleID}})" class="delete-button">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
<script src="./js/delete_role.js"></script>

{{!-- ADD a new role to the Roles table --}}
<form id="add-role-form-ajax">
    <fieldset class="form-fillable">
        <legend><strong>Add a Role</strong></legend>
        <p>To add a new role, please enter the following information and click Add.</p>
        <p>
            <label for="input-name">Role Name: </label>
            <input type="text" name="input-name" id="input-name">

            <input type="submit" value="Add" class="form-button">
        </p>
    </fieldset>
</form>
<script src="./js/add_role.js"></script>